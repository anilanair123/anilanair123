#include <stdio.h>
#include<conio.h>
int main()
{
    int n,i,max,min,a[100];
    printf("enter using size of array a[100]\n");
    scanf("%d",&n);
    clrscr();
    printf("enter %d numbers into array\n ",n);
    for(i=1;i<=n;i++)
    scanf("%d",&a[i]);
    max=a[0];
    min=a[0];
    for(i=1;i<=n;i++)
    {
        if(max<a[i])
        max=a[i];
        else if(min>a[i])
        min=a[i];
    }
    printf("maximum no in the given array = %d \n",max);
    printf("minimum no in the given array  =%d",min);
    
    getch();
    return 0;
}
